<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="top"
    android:padding="?rtr_activity_padding"
    >
	<LinearLayout android:id="@+id/drivers_edit_btns"
	    android:orientation="vertical"
		android:layout_weight="25"
		android:layout_width="0dip"
		android:layout_height="wrap_content"
	    android:gravity="top"
		>
		<Button android:id="@+id/drivers_edit_new"
			android:text="@string/new_driver"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:onClick="onClick_BtnNewPerson" />
		<Button
			android:text="@string/done"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:onClick="onClick_BtnDone" />
	</LinearLayout>
	<ListView android:id="@+id/list"
		android:minHeight="?android:attr/listPreferredItemHeight"
		android:layout_weight="75"
		android:layout_width="0dip"
		android:layout_height="fill_parent" />
</LinearLayout>
 