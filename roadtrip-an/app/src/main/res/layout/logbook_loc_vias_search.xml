<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
<LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="?rtr_activity_padding"
    >
<TextView
    android:text="@string/logbook_show__search_via_routes__loc_A"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="9dp"
    />
    <LinearLayout
	android:orientation="horizontal"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	>
	<TextView
	    android:text="@string/area__colon"
	    android:layout_width="wrap_content"
	    android:layout_height="fill_parent"
	    android:gravity="center_vertical"
	    android:layout_marginRight="3dp"
	    />
	<Spinner  android:id="@+id/logbook_loc_vias_locA_areas"
	    android:layout_height="wrap_content"
	    android:layout_width="0dip"
	    android:layout_weight="1"
	    />
    </LinearLayout>
    <AutoCompleteTextView  android:id="@+id/logbook_loc_vias_locA"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:singleLine="true"
	/>
<TextView
    android:text="@string/logbook_show__search_via_routes__loc_B"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="9dp"
    />
    <LinearLayout
	android:orientation="horizontal"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	>
	<TextView
	    android:text="@string/area__colon"
	    android:layout_width="wrap_content"
	    android:layout_height="fill_parent"
	    android:gravity="center_vertical"
	    android:layout_marginRight="3dp"
	    />
	<Spinner  android:id="@+id/logbook_loc_vias_locB_areas"
	    android:layout_height="wrap_content"
	    android:layout_width="0dip"
	    android:layout_weight="1"
	/>
    </LinearLayout>
	<AutoCompleteTextView  android:id="@+id/logbook_loc_vias_locB"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:singleLine="true"
	    />
</LinearLayout>
</ScrollView>