<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="?rtr_activity_padding"
    >
<ListView android:id="@+id/trip_tstop_choosefreq_list"
    android:layout_weight=".9"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" />
<LinearLayout
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="right"
    >
	<Button android:id="@+id/trip_tstop_btn_choosefreq_other"
        android:layout_width="fill_parent"
        android:layout_weight=".5"
        android:layout_height="wrap_content"
        android:text="@string/other_stop"
        android:onClick="onClick_BtnOtherStop" />
</LinearLayout>
</LinearLayout>
