<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="wrap_content" 
    android:layout_height="fill_parent" >

   <!-- wholenum must be wide enough for 6 or 7 digits  -->
   <com.quietlycoding.android.picker.NumberPicker
        android:id="@+id/org_shadowlands_rtr_odometer_wholenum"
        android:minWidth="120sp"
	    android:layout_width="wrap_content" 
        android:layout_height="wrap_content"
         />
	<TextView  
        android:id="@+id/org_shadowlands_rtr_odometer_dot"
	    android:layout_width="wrap_content" 
	    android:layout_height="fill_parent" 
	    android:text="."
	    android:textStyle="bold"
	    android:gravity="center"
	    />
    <org.shadowlands.roadtrip.android.OdometerNumberPickerTenths
        android:id="@+id/org_shadowlands_rtr_odometer_tenths"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>